{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        },
        "herd": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "environment": {
                "SITE_PATH": "/Users/ryan/code/rtfm.guide"
            }
        },
        "linear": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.linear.app/mcp"
            ]
        }
    }
}